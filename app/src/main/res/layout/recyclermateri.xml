<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/cardviewrecy"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >


        <TextView
            android:text="judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materia"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <TextView
            android:text="guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materib"
            android:layout_alignBaseline="@+id/materia"
            android:layout_alignBottom="@+id/materia"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="penjelasan"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/materia"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:id="@+id/materic"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Buka detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView4" />

    </RelativeLayout>

</android.support.v7.widget.CardView>