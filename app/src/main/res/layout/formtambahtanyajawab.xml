<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ttj_tambahtanyajawab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Tanya Jawab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/ttj_textview"
        android:textColor="@android:color/black" />

    <Button
        android:text="Tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttj_detail"
        android:layout_alignStart="@+id/ttj_textview"
        android:layout_marginTop="24dp"
        android:id="@+id/ttj_tambah"
        android:background="@android:drawable/screen_background_light_transparent"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ttj_detail"
        android:hint="Teks"
        android:background="@color/md_grey_200"
        android:textAlignment="viewStart"
        android:selectAllOnFocus="false"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/ttj_textview"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
