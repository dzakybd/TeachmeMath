<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tm_tambahmateri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.its.teachmemath.View.Tambahmateri">

    <TextView
        android:text="Tambah Materi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/tm_textview"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/tm_judul"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/tm_textview"
        android:layout_centerHorizontal="true"
        android:hint="Judul materi"
        android:textAlignment="center" />

    <Button
        android:text="Tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tm_detail"
        android:layout_alignStart="@+id/tm_textview"
        android:layout_marginTop="24dp"
        android:id="@+id/tm_tambah"
        android:background="@android:drawable/screen_background_light_transparent"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/tm_detail"
        android:hint="Penjelasan"
        android:background="@color/md_grey_200"
        android:textAlignment="viewStart"
        android:layout_below="@+id/tm_judul"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="false" />

</RelativeLayout>
